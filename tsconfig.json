{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    // @types are automatically included in the compilation. to exclude them, add "types": [] to your tsconfig.json
    "types": [
      "node",
      "cucumber",
      "webdriverio",
      "chai"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "strict": true,
    "outDir" : "compiled-output"
  },
  "exclude": [
    "node_modules"
  ]
}
